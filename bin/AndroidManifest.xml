<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.info.antillesinfov2"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="fr.info.antillesinfov2.MainActivity"
            android:label="@string/app_name"
            android:uiOptions="splitActionBarWhenNarrow" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="fr.info.antillesinfov2.DetailInfoActivity"
            android:label="@string/title_activity_detail_info"
            android:parentActivityName="fr.info.antillesinfov2.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="fr.info.antillesinfov2.MainActivity" />
        </activity>
        <activity
            android:name="fr.info.antillesinfov2.WebViewActivity"
            android:label="@string/title_activity_web_view" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="fr.info.antillesinfov2.DetailInfoActivity" />
        </activity>
    </application>

</manifest>